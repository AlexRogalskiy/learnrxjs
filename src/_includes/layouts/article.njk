---
layout = "layouts/base.njk"
---
<div class="main article">
  <aside class="main-sidebar">
    {%- include "components/main-navigation.component.njk" -%}
  </aside>

  <article class="main-content-wrapper">
    <header class="main-content-header">
      <h1 class="article-title">{{ title }}</h1>
      <div class="article-date-create">
        <span>Обновлено: <time datetime="{{ page.date | formatDateISO }}">{{ page.date | formatDate }}</time></span>
      </div>
    </header>
    <div class="main-content">
      {{ content | safe }}
    </div>
  </article>

  <aside class="page-sidebar">
    <section class="page-sidebar-section">
      <h3 class="section-title">Содержание</h3>
      {{ content | toc | safe }}
    </section>

    <section class="page-sidebar-section">
      <h3 class="section-title">Ещё</h3>
      <ul class="page-sidebar-action-list">
        <li><a href="">Редактировать</a></li>
        <li><a href="">Телеграм чат</a></li>
      </ul>
    </section>
  </aside>
</div>

